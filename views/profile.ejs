<%- include('partials/header') -%>
<div class="flex justify-around">
  <div class="card flex-auto mx-1 bg-neutral shadow-xl">
    <div class="card-body items-center text-center">
      <h2 class="card-title"><%= user.userName %></h2>
    </div>
    <figure class="px-10 pt-10">
      <img src="" alt="Featured Recipe" class="rounded-xl" />
    </figure>
    <div class="card-body items-center text-center">
      <h2 class="card-title">About Me:</h2>
      <p>Sou Eu Sou o Joe o Famoso Biruleibi</p>
    </div>
  </div>

  <div class="card flex-auto mx-1 bg-base-100 shadow-xl">
    <div class="card-body items-center text-center">
      <h2 class="card-title">Add Recipe</h2>
      <div class="mt-5">
        <form
          action="/post/createPost"
          enctype="multipart/form-data"
          method="POST"
        >
          <div class="form-control">
            <label class="input-group mx-1">
              <span>Title</span>
              <input type="text" class="input input-bordered" name="title" />
            </label>

            <label class="input-group  input-group-vertical my-1" id="ingredientList">
              <span>Ingredients</span>
              <input type="text" class="input input-bordered" name="ingredients" />
            </label>
            <div class="">
              <button type="button" class="btn btn-accent text-accent " id="addIngredientsBtn">+</button>
            </div>

            <label class="input-group my-1">
              <span>Walktrough</span>
              <textarea class="textarea textarea-bordered"></textarea>
            </label>

            <label class="input-group my-1">
              <span>Tips</span>
              <textarea class="textarea textarea-bordered"></textarea>
            </label>

            <label class="input-group my-1">
              <span>Prep. Time</span>
              <input type="text" class="input input-bordered" name="prepTime" />
            </label>

            <label class="input-group my-1">
              <span>Portions</span>
              <input type="text" class="input input-bordered" name="portions" />
            </label>

            <label
              for="imgUpload"
              class="input-group input-group-vertical my-4"
            >
              <span>Photo</span>
              <input type="file" class="file-input-accent file-input file-input-bordered w-full max-w-xs" id="imageUpload" name="file" />
            </label>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<section class="userRecipes"></section>
<script src="../public/js/script.js"></script>
<%- include('partials/footer') -%>
